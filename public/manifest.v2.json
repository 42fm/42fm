{
  "manifest_version": 2,
  "name": "42FM",
  "version": "0.0.3",
  "browser_action": {
    "default_title": "42FM",
    "default_icon": {
      "32": "assets/logo-32.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "assets/logo-32.png",
    "64": "assets/logo-64.png",
    "128": "assets/logo-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["*://*.twitch.tv/*", "activeTab", "webRequest"]
}
