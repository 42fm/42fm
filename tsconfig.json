{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"],
      "@hooks/*": ["src/hooks/*"],
      "@typings/*": ["types/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "node"]
  },
  "include": ["./src"]
}
